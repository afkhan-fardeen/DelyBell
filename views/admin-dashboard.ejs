  <script>
    // Check authentication
    if (sessionStorage.getItem('adminAuthenticated') !== 'true') {
      window.location.href = '/admin/login';
    }
    
    function handleLogout() {
      sessionStorage.removeItem('adminAuthenticated');
      sessionStorage.removeItem('adminLoginTime');
      window.location.href = '/admin/login';
    }
    
    function toggleProfileMenu(event) {
      event.stopPropagation();
      const dropdown = document.getElementById('profileDropdown');
      dropdown.classList.toggle('active');
    }
    
    // Close dropdown when clicking outside
    document.addEventListener('click', (event) => {
      const profileMenu = document.querySelector('.profile-menu');
      const dropdown = document.getElementById('profileDropdown');
      
      if (profileMenu && !profileMenu.contains(event.target)) {
        dropdown.classList.remove('active');
      }
    });
    
    let currentFilters = {
      shop: '',
      status: '',
      search: '',
      dateFrom: '',
      dateTo: '',
    };
    
    // Load stats
    async function loadStats() {
      try {
        const response = await fetch('/admin/api/stats');
        const data = await response.json();
        if (data.success) {
          document.getElementById('totalOrders').textContent = data.stats.totalOrdersToday;
          document.getElementById('syncedOrders').textContent = data.stats.successfullySynced;
          document.getElementById('failedOrders').textContent = data.stats.failed;
          document.getElementById('needsAttention').textContent = data.stats.needsAttention;
        }
        updateLastUpdated();
      } catch (error) {
        console.error('Error loading stats:', error);
      }
    }
    
    // Load shops
    async function loadShops() {
      try {
        const response = await fetch('/admin/api/shops');
        const data = await response.json();
        if (data.success) {
          const select = document.getElementById('filterShop');
          select.innerHTML = '<option value="">All Shops</option>';
          data.shops.forEach(shopObj => {
            const option = document.createElement('option');
            const shopDomain = shopObj.shop || shopObj; // Handle both object and string formats
            option.value = shopDomain;
            option.textContent = shopDomain;
            select.appendChild(option);
          });
        }
      } catch (error) {
        console.error('Error loading shops:', error);
      }
    }
    
    // Load orders
    async function loadOrders() {
      const tbody = document.getElementById('ordersTableBody');
      const showCheckboxes = currentSyncMode === 'manual';
      const totalCols = showCheckboxes ? 9 : 8;
      tbody.innerHTML = `<tr><td colspan="${totalCols}" class="loading"><div class="loading-spinner"></div><div>Loading orders...</div></td></tr>`;
      
      try {
        const params = new URLSearchParams();
        if (currentFilters.shop) params.append('shop', currentFilters.shop);
        if (currentFilters.status) params.append('status', currentFilters.status);
        if (currentFilters.search) params.append('search', currentFilters.search);
        if (currentFilters.dateFrom) params.append('dateFrom', currentFilters.dateFrom);
        if (currentFilters.dateTo) params.append('dateTo', currentFilters.dateTo);
        params.append('limit', '50');
        
        const response = await fetch(`/admin/api/orders?${params}`);
        const data = await response.json();
        
        if (data.success) {
          const showCheckboxes = currentSyncMode === 'manual';
          const totalCols = showCheckboxes ? 9 : 8;
          
          if (data.orders.length === 0) {
            tbody.innerHTML = `<tr><td colspan="${totalCols}" class="empty-state"><div class="empty-state-icon"><svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path></svg></div><div class="empty-state-title">No orders found</div><div>Try adjusting your filters</div></td></tr>`;
          } else {
            tbody.innerHTML = data.orders.map(order => {
                const canSync = order.status === 'pending_sync' || order.status === 'failed';
                return `
                <tr>
                  ${showCheckboxes ? `<td><input type="checkbox" class="order-checkbox" value="${order.id}" ${canSync ? '' : 'disabled'} onchange="updateSyncButtons()"></td>` : ''}
                  <td>
                    <div class="order-number">#${order.shopifyOrderNumber || 'N/A'}</div>
                    <div class="order-shop-label">Shopify</div>
                  </td>
                  <td>
                    <a href="#" class="shop-link" onclick="filterByShop('${order.shop}'); return false;">${order.shop}</a>
                  </td>
                  <td>${formatCurrency(order.amount, order.currency)}</td>
                  <td>
                    <span class="payment-badge ${getPaymentClass(order.financialStatus)}">${formatPaymentStatus(order.financialStatus)}</span>
                  </td>
                  <td>${order.delybellOrderId ? `<span style="font-family: monospace; font-size: 11px;">${order.delybellOrderId}</span>` : '<span style="color: var(--color-error);">Not Created</span>'}</td>
                  <td>
                    <span class="status-badge ${getStatusClass(order.status)}">${getStatusText(order.status)}</span>
                  </td>
                  <td>
                    <span class="time-ago" title="${order.createdAt ? new Date(order.createdAt).toLocaleString('en-US', { dateStyle: 'full', timeStyle: 'short' }) : 'N/A'}">${order.createdAt ? timeAgo(order.createdAt) : 'N/A'}</span>
                  </td>
                  <td>
                    <div class="action-buttons">
                      ${order.status === 'failed' ? `<button class="btn btn-primary" onclick="retryOrder('${order.id}')"><svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path></svg>Retry</button>` : ''}
                      <button class="btn btn-secondary" onclick="viewOrderDetails('${order.id}')"><svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>Details</button>
                    </div>
                  </td>
                </tr>
              `;
            }).join('');
          }
        }
      } catch (error) {
        const showCheckboxes = currentSyncMode === 'manual';
        const totalCols = showCheckboxes ? 9 : 8;
        tbody.innerHTML = `<tr><td colspan="${totalCols}" class="empty-state"><div style="color: var(--color-error);">Error loading orders: ${error.message}</div></td></tr>`;
      }
    }
    
    // View order details
    async function viewOrderDetails(orderId) {
      try {
        const response = await fetch(`/admin/api/orders/${orderId}`);
        const data = await response.json();
        
        if (data.success) {
          const order = data.order;
          const modalBody = document.getElementById('modalBody');
          
          modalBody.innerHTML = `
            <div class="detail-row">
              <div class="detail-label">Shopify Order ID</div>
              <div class="detail-value"><code>${order.shopifyOrderId}</code></div>
            </div>
            <div class="detail-row">
              <div class="detail-label">Shopify Order #</div>
              <div class="detail-value">#${order.shopifyOrderNumber || 'N/A'}</div>
            </div>
            <div class="detail-row">
              <div class="detail-label">Delybell Order ID</div>
              <div class="detail-value">${order.delybellOrderId ? `<code>${order.delybellOrderId}</code>` : '<span style="color: var(--color-error);">Not Created</span>'}</div>
            </div>
            <div class="detail-row">
              <div class="detail-label">Shop</div>
              <div class="detail-value">${order.shop}</div>
            </div>
            <div class="detail-row">
              <div class="detail-label">Amount</div>
              <div class="detail-value"><strong>${formatCurrency(order.amount, order.currency)}</strong></div>
            </div>
            <div class="detail-row">
              <div class="detail-label">Payment</div>
              <div class="detail-value"><span class="payment-badge ${getPaymentClass(order.financialStatus)}">${formatPaymentStatus(order.financialStatus)}</span></div>
            </div>
            <div class="detail-row">
              <div class="detail-label">Status</div>
              <div class="detail-value"><span class="status-badge ${getStatusClass(order.status)}">${getStatusText(order.status)}</span></div>
            </div>
            <div class="detail-row">
              <div class="detail-label">Order Placed</div>
              <div class="detail-value">${order.createdAt ? new Date(order.createdAt).toLocaleString('en-US', { dateStyle: 'full', timeStyle: 'short' }) : 'N/A'}</div>
            </div>
            <div class="detail-row">
              <div class="detail-label">Synced At</div>
              <div class="detail-value">${order.syncedAt ? new Date(order.syncedAt).toLocaleString('en-US', { dateStyle: 'full', timeStyle: 'short' }) : 'N/A'}</div>
            </div>
            ${order.errorMessage ? `
              <div class="error-message">
                <strong>Error:</strong> ${formatErrorMessage(order.errorMessage)}
              </div>
            ` : ''}
            <div class="logs-section">
              <button class="logs-toggle" onclick="toggleLogs(this)">Show technical logs</button>
              <div class="logs-content">
Order ID: ${order.id}
Status: ${order.status}
Shopify Order ID: ${order.shopifyOrderId}
Shopify Order #: ${order.shopifyOrderNumber || 'N/A'}
Delybell Order ID: ${order.delybellOrderId || 'N/A'}
Amount: ${formatCurrency(order.amount, order.currency)}
Created: ${new Date(order.createdAt).toISOString()}
${order.errorMessage ? `Error: ${order.errorMessage}` : ''}
              </div>
            </div>
          `;
          
          document.getElementById('orderModal').classList.add('active');
        }
      } catch (error) {
        alert('Error loading order details: ' + error.message);
      }
    }
    
    // Retry order
    async function retryOrder(orderId) {
      if (!confirm('Retry syncing this order to Delybell?\n\nA new order ID will be generated to avoid duplicates.')) {
        return;
      }
      
      const btn = event.target.closest('.btn');
      const originalHTML = btn.innerHTML;
      btn.disabled = true;
      btn.innerHTML = '<svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path></svg>Retrying...';
      
      try {
        const response = await fetch(`/admin/api/orders/${orderId}/retry`, {
          method: 'POST',
        });
        const data = await response.json();
        
        if (data.success) {
          alert('Order retried successfully!');
          loadOrders();
          loadStats();
        } else {
          alert('Retry failed: ' + data.error);
        }
      } catch (error) {
        alert('Error retrying order: ' + error.message);
      } finally {
        btn.disabled = false;
        btn.innerHTML = originalHTML;
      }
    }
    
    // Helper functions
    function formatCurrency(amount, currency) {
      if (!amount && amount !== 0) return 'N/A';
      const currencyCode = currency || 'USD';
      return new Intl.NumberFormat('en-US', {
        style: 'currency',
        currency: currencyCode,
      }).format(parseFloat(amount));
    }
    
    function timeAgo(date) {
      if (!date) return 'N/A';
      
      const now = new Date();
      let then;
      
      // Handle both string and Date objects
      if (typeof date === 'string') {
        then = new Date(date);
      } else if (date instanceof Date) {
        then = date;
      } else {
        return 'N/A';
      }
      
      // Check if date is valid
      if (isNaN(then.getTime())) {
        return 'N/A';
      }
      
      // Use getTime() for accurate calculation
      const diffMs = now.getTime() - then.getTime();
      
      // Handle future dates (shouldn't happen, but handle gracefully)
      if (diffMs < 0) {
        return 'Just now';
      }
      
      const diffSecs = Math.floor(diffMs / 1000);
      const diffMins = Math.floor(diffMs / 60000);
      const diffHours = Math.floor(diffMs / 3600000);
      const diffDays = Math.floor(diffMs / 86400000);
      
      // Show exact time if less than 1 minute
      if (diffSecs < 60) {
        return diffSecs < 10 ? 'Just now' : `${diffSecs} sec ago`;
      }
      
      // Show minutes if less than 1 hour
      if (diffMins < 60) {
        return `${diffMins} min ago`;
      }
      
      // Show hours if less than 24 hours
      if (diffHours < 24) {
        return `${diffHours} hour${diffHours > 1 ? 's' : ''} ago`;
      }
      
      // Show days if less than 7 days
      if (diffDays < 7) {
        return `${diffDays} day${diffDays > 1 ? 's' : ''} ago`;
      }
      
      // Show date for older items
      return then.toLocaleDateString('en-US', { 
        month: 'short', 
        day: 'numeric',
        year: then.getFullYear() !== now.getFullYear() ? 'numeric' : undefined
      });
    }
    
