              <div class="detail-value">${order.createdAt ? new Date(order.createdAt).toLocaleString() : 'N/A'}</div>
            </div>
            <div class="detail-row">
              <div class="detail-label">Synced</div>
              <div class="detail-value">${order.syncedAt ? new Date(order.syncedAt).toLocaleString() : 'Not synced'}</div>
            </div>
            ${order.errorMessage ? `
              <div class="detail-row">
