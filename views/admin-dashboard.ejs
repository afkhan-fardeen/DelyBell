    document.getElementById('syncModeAuto').addEventListener('change', function() {
      if (this.checked) updateSyncMode('auto');
    });
    
    document.getElementById('syncModeManual').addEventListener('change', function() {
      if (this.checked) updateSyncMode('manual');
    });
    
    // Update shop filter change handler
    const shopSelect = document.getElementById('filterShop');
    if (shopSelect) {
      shopSelect.addEventListener('change', function() {
        const shop = this.value;
        if (shop) {
          loadSyncMode(shop);
        } else {
          document.getElementById('syncModeCard').style.display = 'none';
        }
      });
    }
    
