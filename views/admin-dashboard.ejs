    // Retry order
    async function retryOrder(orderId) {
      if (!confirm('Retry syncing this order?')) return;
      
      try {
        const response = await fetch(`/admin/api/orders/${orderId}/retry`, { method: 'POST' });
        const data = await response.json();
        
        if (data.success) {
          alert('Order retried successfully!');
          loadOrders();
          loadStats();
        } else {
          alert('Error: ' + (data.error || 'Unknown error'));
        }
      } catch (error) {
        alert('Error: ' + error.message);
      }
    }
    
    // Helper functions
    function formatCurrency(amount, currency) {
      if (!amount && amount !== 0) return 'N/A';
      return new Intl.NumberFormat('en-US', {
        style: 'currency',
        currency: currency || 'USD'
      }).format(parseFloat(amount));
    }
    
    function timeAgo(date) {
      if (!date) return 'N/A';
      const then = new Date(date);
      if (isNaN(then.getTime())) return 'N/A';
      
      const diffMs = Date.now() - then.getTime();
      const diffMins = Math.floor(diffMs / 60000);
      const diffHours = Math.floor(diffMs / 3600000);
      const diffDays = Math.floor(diffMs / 86400000);
      
      if (diffMins < 1) return 'Just now';
      if (diffMins < 60) return `${diffMins} min ago`;
      if (diffHours < 24) return `${diffHours} hour${diffHours > 1 ? 's' : ''} ago`;
      if (diffDays < 7) return `${diffDays} day${diffDays > 1 ? 's' : ''} ago`;
      return then.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
    }
    
    function getStatusClass(status) {
      if (status === 'processed') return 'badge-success';
      if (status === 'failed') return 'badge-error';
      if (status === 'pending_sync') return 'badge-warning';
      return 'badge-warning';
    }
    
    function getStatusText(status) {
      if (status === 'processed') return 'Synced';
      if (status === 'failed') return 'Failed';
      if (status === 'pending_sync') return 'Pending';
      return 'Pending';
    }
    
    function getPaymentClass(status) {
      if (!status) return 'badge-primary';
      const s = status.toLowerCase();
      if (s === 'paid') return 'badge-success';
      if (s === 'pending' || s === 'authorized') return 'badge-purple';
      return 'badge-primary';
    }
    
    function formatPaymentStatus(status) {
      if (!status) return 'Unknown';
      const s = status.toLowerCase();
      if (s === 'paid') return 'Paid';
      if (s === 'pending' || s === 'authorized') return 'COD';
      return status.charAt(0).toUpperCase() + status.slice(1);
    }
    
    function getReportStatusClass(status) {
      if (status === 'open') return 'badge-error';
      if (status === 'in_progress') return 'badge-warning';
      if (status === 'resolved' || status === 'closed') return 'badge-success';
      return 'badge-primary';
    }
    
    function closeModal() {
      document.getElementById('orderModal').classList.remove('active');
    }
    
    function closeReportModal() {
      document.getElementById('reportModal').classList.remove('active');
    }
    
    function handleLogout() {
      sessionStorage.removeItem('adminAuthenticated');
      window.location.href = '/admin/login';
    }
    
    function updateLastUpdated() {
      document.getElementById('lastUpdated').textContent = new Date().toLocaleTimeString();
    }
    
    // Filter listeners
    document.getElementById('filterShop').addEventListener('change', (e) => {
      currentFilters.shop = e.target.value;
      loadOrders();
    });
    
    document.getElementById('filterStatus').addEventListener('change', (e) => {
      currentFilters.status = e.target.value;
      loadOrders();
    });
    
    document.getElementById('filterSearch').addEventListener('input', (e) => {
      clearTimeout(window.searchTimeout);
      window.searchTimeout = setTimeout(() => {
        currentFilters.search = e.target.value;
        loadOrders();
      }, 500);
    });
    
    document.getElementById('filterDateFrom').addEventListener('change', (e) => {
      currentFilters.dateFrom = e.target.value;
      loadOrders();
    });
    
    document.getElementById('filterDateTo').addEventListener('change', (e) => {
      currentFilters.dateTo = e.target.value;
      loadOrders();
    });
    
    document.getElementById('reportStatusFilter').addEventListener('change', () => {
      loadProblemReports();
    });
    
    // Load shops for filter
    async function loadShopsForFilter() {
      try {
        const response = await fetch('/admin/api/shops');
        const data = await response.json();
        if (data.success) {
          const select = document.getElementById('filterShop');
          select.innerHTML = '<option value="">All Shops</option>';
          data.shops.forEach(shop => {
            const option = document.createElement('option');
            const shopDomain = shop.shop || shop;
            option.value = shopDomain;
            option.textContent = shopDomain.replace('.myshopify.com', '');
            select.appendChild(option);
          });
        }
      } catch (error) {
        console.error('Error loading shops:', error);
      }
    }
    
    // Initialize
    loadStats();
    loadRecentOrders();
    loadShopsForFilter();
    
    // Auto-refresh
    setInterval(() => {
      if (currentTab === 'overview') {
        loadStats();
        loadRecentOrders();
      } else if (currentTab === 'orders') {
        loadOrders();
      } else if (currentTab === 'reports') {
        loadProblemReports();
      }
    }, 30000);
  </script>
