    setTimeout(() => {
      const shopSelect = document.getElementById('filterShop');
      if (shopSelect && shopSelect.value) {
        loadSyncMode(shopSelect.value);
      }
    }, 500);
    
    // Refresh stats every 30 seconds
    setInterval(() => {
      loadStats();
      loadOrders();
    }, 30000);
