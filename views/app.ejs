    async function retryFailedOrders() {
      const checked = Array.from(document.querySelectorAll('.order-checkbox:checked')).map(cb => cb.value);
      if (checked.length === 0) {
        showToast('warning', 'No Selection', 'Please select at least one failed order');
        return;
