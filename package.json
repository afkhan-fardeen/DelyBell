{
  "name": "shopify-delybell-integration",
  "version": "1.0.0",
  "description": "Automatically sync Shopify orders to Delybell delivery management system. Production-ready Shopify App Store compliant app.",
  "main": "web/index.js",
  "scripts": {
    "start": "node web/index.js",
    "dev": "nodemon web/index.js",
    "shopify": "shopify",
    "dev:ui": "cd app-ui && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:ui\"",
    "build:ui": "cd app-ui && npm run build",
    "start:ui": "cd app-ui && npm start",
    "tunnel": "cloudflared tunnel --url http://localhost:3000",
    "tunnel:lt": "lt --port 3000"
  },
  "keywords": [
    "shopify",
    "delybell",
    "integration",
    "orders",
    "delivery",
    "shipping",
    "logistics"
  ],
  "author": "Delybell",
  "license": "ISC",
  "dependencies": {
    "@shopify/shopify-api": "^9.0.0",
    "@supabase/supabase-js": "^2.39.0",
    "express": "^4.18.2",
    "ejs": "^3.1.9",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
